{
	"name": "million-card-game",
	"version": "1.0.0",
	"description": "Million Card Game - A card game built with Phaser 3",
	"main": "electron/main.js",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder",
		"build-win": "electron-builder --win",
		"build-win-steam": "electron-builder --win --x64 --dir",
		"build-mac": "electron-builder --mac",
		"build-linux": "electron-builder --linux",
		"dist": "electron-builder --publish=never"
	},
	"keywords": ["game", "cards", "phaser"],
	"author": "Marco Ogaz-Vega and Lois Million Zerai",
	"license": "MIT",
	"devDependencies": {
		"electron": "^27.0.0",
		"electron-builder": "^24.6.4"
	},
	"build": {
		"appId": "com.millioncardgame.app",
		"productName": "Million Card Game",
		"directories": {
			"output": "dist",
			"buildResources": "build"
		},
		"files": [
			"**/*",
			"!node_modules",
			"!dist",
			"!electron/build",
			"!.git",
			"!*.md"
		],
		"extraResources": [
			{
				"from": "node_modules/electron/dist",
				"to": ".",
				"filter": ["**/*"]
			}
		],
		"win": {
			"target": [
				{
					"target": "dir",
					"arch": ["x64"]
				}
			],
			"icon": "assets/icon.ico",
			"asar": true,
			"asarUnpack": [
				"**/*.node",
				"**/*.dll"
			]
		},
		"mac": {
			"target": "dmg",
			"icon": "assets/icon.icns",
			"category": "public.app-category.games"
		},
		"linux": {
			"target": "AppImage",
			"icon": "assets/icon.png",
			"category": "Game"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true
		}
	}
}